<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlin_sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.kotlin_sample.NotificationActivity" />
        <activity android:name="com.example.kotlin_sample.RequestToServerActivity" />
        <activity android:name="com.example.kotlin_sample.AnimationsActivity" />
        <activity android:name="com.example.kotlin_sample.MapActivity" />
        <activity android:name="com.example.kotlin_sample.DrawerMenuActivity" />
        <activity android:name="com.example.kotlin_sample.BottomNavigationViewActivity" />
        <activity android:name="com.example.kotlin_sample.ViewPagerActivity" />
        <activity android:name="com.example.kotlin_sample.RecyclerViewActivity" />
        <activity android:name="com.example.kotlin_sample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>